<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CancerDB</title>
    <%- include("partials/head") -%>
</head>
    <body>
        <%- include("partials/navigation") %>
        <div class="container-fluid p-5 ">
            <div class="row">
                <% for (const mitosis of modelo) { %>
                <div class="card m-card mb-4 col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                    <a href="/image/<%= mitosis.mitosis_ID %>">
                        <img src="<%= mitosis.path %>" class="card-img-top border-25 soft-shadow" alt="<%= mitosis.filename %>">
                    </a>
                    <div onclick="location.href='/image/<%= mitosis.mitosis_ID %>';" class="mt-2" style="cursor:pointer">
                        <p class="image-title mb-0"><%= mitosis.title %></p>
                        <a class="image-copyright" href="<%= mitosis.copyright_link %>"><%= mitosis.copyright_name %></a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </body>
</html>